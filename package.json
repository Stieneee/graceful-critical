{
  "name": "graceful-critical",
  "version": "1.0.1",
  "description": "Gracefully handle SIGTERM and SIGINT around critical sections. ",
  "main": "index.js",
  "scripts": {
    "lint": "npx eslint .",
    "test": "npx mocha --exit"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Stieneee/graceful-critical.git"
  },
  "keywords": [
    "graceful",
    "gracefully",
    "sigterm",
    "sigint",
    "pm2",
    "critical",
    "lock",
    "handle"
  ],
  "author": "Tyler Stiene <tystiene@gmail.com> (https://tylerstiene.ca)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Stieneee/graceful-critical/issues"
  },
  "homepage": "https://github.com/Stieneee/graceful-critical#readme",
  "eslintIgnore": [
    "/coverage",
    "/node_modules"
  ],
  "eslintConfig": {
    "extends": [
      "airbnb-base"
    ],
    "parserOptions": {
      "ecmaVersion": 2017
    },
    "env": {
      "node": true,
      "mocha": true
    },
    "rules": {
      "max-len": "off",
      "no-console": "off"
    }
  },
  "devDependencies": {
    "eslint": "^7.30.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-import-resolver-node": "^0.3.4",
    "eslint-plugin-import": "^2.23.4",
    "mocha": "^9.0.2",
    "release-it": "^14.10.0"
  }
